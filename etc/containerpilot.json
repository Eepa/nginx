{
  "consul": "consul:8500",
  "onStart": "/usr/local/bin/reload.sh preStart",
  "services": [
    {
      "name": "nginx",
      "port": 80,
      "publicIp": true,
      "health": "/usr/bin/curl --fail -s http://localhost/health.txt",
      "poll": 10,
      "ttl": 25
    }
  ],
  "backends": [
    {
      "name": "app",
      "poll": 7,
      "onChange": "/usr/local/bin/reload.sh"
    }
  ]
}
